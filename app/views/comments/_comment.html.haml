%blockquote
  .row
    .col-md-2
      - if comment.user.photos.present?
        = image_tag(comment.user.photos.last.image.url(:thumb))
      - else
        = image_tag('anon.png', width: 64)
    .col-md-10
      %small= " #{comment.user} said"
      %p= comment.body
      - if @can_modetate
        %p= link_to 'Destroy', comment_path(comment), method: :delete, class: "btn btn-default"
      %small.text-muted= "#{time_ago_in_words(comment.created_at)} ago"