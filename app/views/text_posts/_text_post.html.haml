.row#post_row.well
  .col-lg-2.col-md-2.col-sm-2
    - if text_post.user.photos.present?
      = link_to image_tag(text_post.user.photos.last.image.url(:thumb), width: 70, height: 70, class: 'img-rounded'), '#'
    - else
      = image_tag('anon.png', width: 64, height: 64)
  .col-lg-10.col-md-10.col-sm-10
    %h4= link_to text_post.user, user_path(text_post.user)
    %p= text_post.body 
    .feed-meta
      %ul.list-inline
        %li.text-muted= "#{time_ago_in_words(text_post.created_at)} ago"
        %li= link_to fa_icon('reply') + 'Reply', post_path(text_post)
        %li= link_to fa_icon('heart') + 'Like'
        - if text_post.user == current_user 
          %li= link_to 'Edit', edit_text_post_path(text_post)
